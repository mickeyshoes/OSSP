<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Together_Login">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/together_icon"
        android:src="@drawable/together_do_not_use"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/IDtext"/>

    <Button
        android:id="@+id/trylogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:background="@drawable/background_round"
        app:layout_constraintBottom_toBottomOf="@id/findInfo"
        app:layout_constraintTop_toBottomOf="@id/Pwtext" />

    <Button
        android:id="@+id/findInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find ID/PW"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="110dp"
        android:shadowColor="@color/colorPrimaryDark"
        android:background="@drawable/background_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trylogin" />

    <EditText
        android:id="@+id/IDtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="ID"
        android:ems="10"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="300dp"
        app:layout_constraintBottom_toTopOf="@+id/Pwtext"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/Pwtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="PW"
        android:ems="10"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintBottom_toTopOf="@+id/trylogin"
        app:layout_constraintTop_toBottomOf="@id/IDtext"/>

</android.support.constraint.ConstraintLayout>