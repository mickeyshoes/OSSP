<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draw1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/draw2"
        android:layout_width="286dp"
        android:layout_height="287dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="276dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/draw4"
            android:layout_width="280.0dp"
            android:layout_height="1.0dp"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/draw5"
            android:layout_width="280.0dp"
            android:layout_height="1.0dp"
            android:layout_marginTop="113dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/draw6"
            android:layout_width="280.0dp"
            android:layout_height="1.0dp"
            android:layout_marginTop="170dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/draw7"
            android:layout_width="280.0dp"
            android:layout_height="1.0dp"
            android:layout_marginTop="228dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputname"
            android:layout_width="289dp"
            android:layout_height="56dp"
            android:gravity="start|top"
            android:hint="Name"
            android:textSize="12sp"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputid"
            android:layout_width="289dp"
            android:layout_height="56dp"
            android:layout_marginTop="56dp"
            android:gravity="start|top"
            android:hint="ID"
            android:textSize="12sp"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputpw01"
            android:layout_width="289dp"
            android:layout_height="56dp"
            android:layout_marginTop="112dp"
            android:gravity="start|top"
            android:hint="Password"
            android:textSize="12sp"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputpw02"
            android:layout_width="289dp"
            android:layout_height="56dp"
            android:layout_marginTop="172dp"
            android:gravity="start|top"
            android:hint="Password check"
            android:textSize="12sp"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputtel"
            android:layout_width="289dp"
            android:layout_height="56dp"
            android:layout_marginTop="228dp"
            android:gravity="start|top"
            android:hint="TEL"
            android:textSize="12sp"
            android:inputType="phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="232dp"
        android:gravity="center_horizontal|top"
        android:text="If you sign up, You can together with our group!"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="164dp"
        android:gravity="center_horizontal|top"
        android:text="Sign UP"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/together_icon"
        android:layout_width="335dp"
        android:layout_height="105dp"
        android:src="@drawable/together_do_not_use"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031" />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="280.0dp"
        android:layout_height="56.0dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="576dp"
        android:gravity="center"
        android:text="SIGN UP"
        android:textSize="14sp"
        android:background="@drawable/background_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>